<launch>

    <node pkg="joy" type="joy_node" name="joy_node" respawn="true">
        <param name="dev" value="/dev/input/js0" />
    </node>

    <node name="main" type="main.py" pkg="wall-climber" output="screen"/>

    <!-- Launch the Microstrain node so the IMU starts publishing data -->
    <node name="microstrain_intertial_driver" pkg="microstrain_inertial_driver" type="microstrain_inertial_driver_node" output="screen" ns="/">

        <!-- Load the default params file. -->
        <rosparam file="$(find microstrain_inertial_driver)/microstrain_inertial_driver_common/config/params.yml" command="load" />
    </node>

</launch>
